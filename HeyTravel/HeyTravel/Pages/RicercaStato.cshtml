@page
@model HeyTravel.Pages.RicercaStatoModel
@{
    ViewData["Title"] = "Stato";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


<style>
    body, html {
        height: 100%;
        /* The image used */
        background-image: url("../images/HeyTravel_Foto_Citta.jpg");
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<div class="text-center">
    <br />
    <br />
    <h1 class="text-black-50"><i>Risultati del tuo stato di destinazione</i></h1>
    <br />
    <br />
</div>
<br />
<br />
<br />
<h5 class="text-black-50" align="center"><i>Inserire la città di destinazione</i></h5>
<br />
<form method="post">
    <select asp-for="@Model.cittarrivo" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        @foreach (var item in Model.eleCittaArrivo)
        {
            <option>
                @item.name.ToString()
            </option>
        }
    </select>
    <br />
    <br />
    <br />
    <div class="text-center">
        <button type="submit" class="btn btn-outline-light" style="background-color:gray">Cerca</button>
    </div>
</form>





<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
