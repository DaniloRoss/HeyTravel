@page 
@model HeyTravel.Pages.RicercaDataModel
@{
    ViewData["Title"] = "Home";
}
<style>
    body, html {
        height: 100%;
        /* The image used */
        background-image: url("../images/HeyTravel_Foto_RicercaData.jpeg");
        /* Full height */
        height: 100%;
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>


<div class="text-center">
    <br />
    <br />
    <h1 class="text-black-50"><i>Manca poco per il completamento del tuo miglior viaggio</i></h1>
    <br />
    <br />
    <br />
</div>

<form method="post" class="text-center">
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
            <style>
                .center {
                    margin: 0;
                    position: absolute;
                    top: 50%;
                    left: 50%;
                    -ms-transform: translate(-50%, -50%);
                    transform: translate(-50%, -50%);
                }
            </style>
            <h5 class="text-black-50" align="center"><i>Inserire il mese di partenza</i></h5>
            <input class="form-control me-2 text-black" asp-for="@Model.mesepartenza" type="month" min="2022-02" max="2022-12" />
            <br />
            <br />
            <h5 class="text-black-50" align="center"><i>Inserire il mese di ritorno</i></h5>
            <input class="form-control me-2 text-black" asp-for="@Model.mesearrivo" type="month" min="2022-02" max="2022-12" />
            <br />
            <br />
            <div class="text-center">
                <button type="submit" class="btn btn-info" style="width:100px">Cerca</button>
            </div>
        </div>
    </div>
</form>
