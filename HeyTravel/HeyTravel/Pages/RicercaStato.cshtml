@page
@model HeyTravel.Pages.RicercaStatoModel
@{
    ViewData["Title"] = "Stato";
}
<style>
    body, html {
        height: 100%;
        /* The image used */
        background-image: url("../images/HeyTravel_Foto_Home.jpg");
        /* Center and scale the image nicely */
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<div class="text-center">
    <br />
    <br />
    <h1 class="text-black-50"><i>Risultati del tuo stato di destinazione</i></h1>
    <br />
    <br />
</div>

<h5 class="text-black-50" align="center"><i>Inserire la città di destinazione</i></h5>
<select asp-for="@Model.cittaArrivo" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
    @foreach (var item in Model.eleCittaArrivo)
    {
        <option>
            @item.name.ToString()
        </option>
    }
</select>
<br />
<div class="text-center">
    <label class="text-black"><i>Percentuale dei contagi: @((int)Model.CasiArrivo.PercentualeContagi)% &emsp;&emsp; &emsp;&emsp;</i></label>

    <label class="text-black"><i>Casi giornalieri: @((int)Model.CasiArrivo.CasiGiornalieri) &emsp;&emsp; &emsp;&emsp;</i></label>

    <label class="text-black"><i>Popolazione Stato: @((int)Model.CasiArrivo.Popolazione) &emsp;&emsp; &emsp;&emsp;</i></label>

    <label class="text-black"><i>Casi COVID attivi: @((int)Model.CasiArrivo.CasiAttivi)</i></label>
</div>
<br />
<div class="text-center">
    <input type="button" onclick="location.href='RicercaData'" class="btn btn-outline-primary" align="center" value="Cerca" />
</div>
